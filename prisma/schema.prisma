generator client {
  provider = "prisma-client-js"
  output   = "../src/util/db/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cooldown {
  id        Int      @id @default(autoincrement())
  userId    String
  command   String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@unique([userId, command])
  @@index([expiresAt])
}

model User {
  id              String    @id
  malId           String   @unique
  malUsername     String
  malAccessToken  String
  malRefreshToken String
  malExpiresAt    DateTime
}

model AuthSession {
  discordId String   @id
  verifier  String
  createdAt DateTime @default(now())
}
